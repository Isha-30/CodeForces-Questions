import java.util.*;

public class Main {

    public static void main(String[] args) throws Exception{
        Scanner sc = new Scanner(System.in);
        String str = sc.next();
        char[] arr = str.toCharArray();
        if(arr[0] >= 'a' && arr[0]<='z'){
            arr[0] -= (char) 32;
        }
        
        for(char ch : arr){
            System.out.print(ch);
        }
    }
}
