import java.util.*;

public class Main {

    public static void main(String[] args) throws Exception{
        Scanner sc = new Scanner(System.in);
        long n = sc.nextLong();
        long k = sc.nextLong();
        
        long half = (n+1)/2;
        
        if(k <= half)
            System.out.println(k*2 - 1);
        else{
            k -= half;
            System.out.println(k * 2);
        }
    }
}
